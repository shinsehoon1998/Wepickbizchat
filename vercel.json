{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": null,
  "installCommand": "npm install",
  "functions": {
    "api/**/*.ts": {
      "runtime": "@vercel/node@3"
    }
  },
  "rewrites": [
    { "source": "/api/auth/:path*", "destination": "/api/auth/:path*" },
    { "source": "/api/dashboard/:path*", "destination": "/api/dashboard/:path*" },
    { "source": "/api/templates/:path*", "destination": "/api/templates/:path*" },
    { "source": "/api/campaigns/:path*", "destination": "/api/campaigns/:path*" },
    { "source": "/api/transactions/:path*", "destination": "/api/transactions/:path*" },
    { "source": "/api/targeting/:path*", "destination": "/api/targeting/:path*" },
    { "source": "/api/stripe/:path*", "destination": "/api/stripe/:path*" },
    { "source": "/(.*)", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        { "key": "Access-Control-Allow-Credentials", "value": "true" },
        { "key": "Access-Control-Allow-Origin", "value": "*" },
        { "key": "Access-Control-Allow-Methods", "value": "GET,OPTIONS,PATCH,DELETE,POST,PUT" },
        { "key": "Access-Control-Allow-Headers", "value": "X-CSRF-Token, X-Requested-With, Accept, Accept-Version, Content-Length, Content-MD5, Content-Type, Date, X-Api-Version, Authorization" }
      ]
    }
  ]
}
